<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew.minecraftcalculator.Recipes">

    <AutoCompleteTextView
        android:id="@+id/itemInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipeHint"
        android:inputType="text"
        android:imeOptions="actionDone">
        <requestFocus/>
    </AutoCompleteTextView>
    <RelativeLayout
        android:id="@+id/interfaceContainer"
        android:layout_width="fill_parent"
        android:layout_height="215sp"
        android:layout_below="@id/itemInput"
        android:paddingTop="39sp"
        android:paddingLeft="9sp"
        android:paddingStart="9sp"
        android:background="@drawable/crafting_interface">
        <LinearLayout
            android:id="@+id/Row1"
            android:layout_width="166sp"
            android:layout_height="52sp"
            android:orientation="horizontal"
            android:layout_marginBottom="7sp">
            <LinearLayout
                android:id="@+id/r1c1"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r1c1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r1c2"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:layout_marginRight="6sp"
                android:layout_marginEnd="6sp"
                android:layout_marginLeft="7sp"
                android:layout_marginStart="7sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r1c2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r1c3"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r1c3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Row2"
            android:layout_width="166sp"
            android:layout_height="52sp"
            android:orientation="horizontal"
            android:layout_below="@id/Row1"
            android:layout_marginBottom="7sp">
            <LinearLayout
                android:id="@+id/r2c1"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r2c1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r2c2"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:layout_marginRight="6sp"
                android:layout_marginEnd="6sp"
                android:layout_marginLeft="7sp"
                android:layout_marginStart="7sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r2c2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r2c3"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r2c3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Row3"
            android:layout_width="166sp"
            android:layout_height="52sp"
            android:orientation="horizontal"
            android:layout_below="@id/Row2">
            <LinearLayout
                android:id="@+id/r3c1"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r3c1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r3c2"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:layout_marginRight="6sp"
                android:layout_marginEnd="6sp"
                android:layout_marginLeft="7sp"
                android:layout_marginStart="7sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r3c2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r3c3"
                android:layout_width="51sp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r3c3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/output_container"
            android:layout_width="78sp"
            android:layout_height="78sp"
            android:layout_marginLeft="287sp"
            android:layout_marginStart="287sp"
            android:layout_marginTop="46sp">
            <ImageView
                android:id="@+id/output_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/yield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="end|bottom"
                />
        </FrameLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/recipeDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/interfaceContainer"
        />


</RelativeLayout>
