<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew.minecraftcalculator.Recipes">

    <RelativeLayout
        android:id="@+id/interfaceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/darkGray">
        <LinearLayout
            android:id="@+id/Row1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:padding="5sp">
            <LinearLayout
                android:id="@+id/r1c1"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginRight="10sp"
                android:layout_marginEnd="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r1c1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r1c2"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginRight="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r1c2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r1c3"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r1c3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Row2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@id/Row1"
            android:padding="5sp">
            <LinearLayout
                android:id="@+id/r2c1"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginRight="10sp"
                android:layout_marginEnd="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r2c1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r2c2"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginRight="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r2c2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r2c3"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r2c3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Row3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@id/Row2"
            android:padding="5sp">
            <LinearLayout
                android:id="@+id/r3c1"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginRight="10sp"
                android:layout_marginEnd="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r3c1_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r3c2"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginRight="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r3c2_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/r3c3"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/r3c3_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <AutoCompleteTextView
        android:id="@+id/itemInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/recipeHint"
        android:layout_below="@id/interfaceContainer"
        android:inputType="text"
        android:imeOptions="actionDone">
        <requestFocus/>
    </AutoCompleteTextView>
</RelativeLayout>
